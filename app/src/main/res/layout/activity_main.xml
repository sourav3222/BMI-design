<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#2E9C92"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgIv"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:src="@drawable/imagess"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="51dp"/>
    <EditText
        android:id="@+id/heightEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgIv"
        android:hint="Enter your Height (cm)"
        android:textSize="21dp"
        android:drawableLeft="@drawable/baseline_man_24"
        android:layout_marginHorizontal="11dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_marginTop="51dp"
        android:padding="11dp"
        android:background="@drawable/heigntet"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/weightEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heightEt"
        android:hint="Enter your weight (kg)"
        android:textSize="21dp"
        android:drawableLeft="@drawable/baseline_monitor_weight_24"
        android:layout_marginHorizontal="11dp"
        android:textAlignment="center"
        android:layout_margin="11dp"
        android:padding="11dp"
        android:inputType="numberDecimal"
        android:background="@drawable/heigntet"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@id/weightEt"
        android:text="show is BMI"
        android:layout_marginTop="41dp"
        android:inputType="text"
        android:layout_marginHorizontal="11dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/BMItv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:layout_marginHorizontal="11dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/heigntet"
        android:backgroundTint="#C5B31C"
        android:padding="11dp"
        android:text="BMI is:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button" />

    <TextView
        android:id="@+id/bmiTypeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Bmi is : ??"
        android:textColor="@color/black"
        android:background="@drawable/heigntet"
        android:backgroundTint="#C50000"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/BMItv"
        android:layout_margin="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>